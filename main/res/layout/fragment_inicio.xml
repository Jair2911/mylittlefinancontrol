<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.FragmentInicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="24dp"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.3" >

        <ImageView
            android:id="@+id/imageViewIcon"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_home"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Icono de la tarjeta"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.4"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corners_background">

            <TextView
                android:id="@+id/textViewTitle0"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Ultimo Registro"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textAllCaps="true"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/value_and_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Valor y descripcion"
                android:textSize="18sp"
                android:paddingVertical="2dp"/>

            <TextView
                android:id="@+id/fecha_ultimo_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Fecha"
                android:textSize="18sp"
                android:paddingVertical="2dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="5dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.4"
            android:background="@drawable/rounded_corners_background">

            <TextView
                android:id="@+id/textViewTitle3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Balance Actual"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textAllCaps="true"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/balance_"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:text="Balance"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="5dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.4"
            android:background="@drawable/rounded_corners_background">

            <TextView
                android:id="@+id/sueldo_mensual"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:text="Sueldo Mensual"
                android:textSize="18sp"
                android:paddingVertical="2dp"
                android:textAlignment="textStart"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/total_deudas"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:text="Deudas"
                android:textSize="18sp"
                android:paddingVertical="2dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>